<?xml version="1.0" encoding="UTF-8"?>
<application id="beam_atcorr">
  <jobTemplates>
    <jobTemplate id="List">
          <streamingExecutable>/application/list/run.sh</streamingExecutable>
                <defaultParameters/>
    </jobTemplate>
    <jobTemplate id="PixEx">
      <streamingExecutable>/application/pixex/run.sh</streamingExecutable>
      <defaultParameters>						
        <parameter id="poi">Name	Latitude	Longitude
Coord_0	-33.997864	149.993988</parameter>
      </defaultParameters>
      <defaultJobconf>
        <property id="mapred.task.timeout">9900000000000</property>
      </defaultJobconf>
    </jobTemplate>
</jobTemplates>	
 <workflow id="beam_atcorr" title="BEAM Atmos Correction" abstract="This example runs the SmacOp atmospheric correction">						
    <workflowVersion>1.0</workflowVersion>
    <node id="node_list">				
      <job id="List"></job>			
      <sources>
        <source id="runs" title="runs for extraction" abstract="List of run ids" refid="string:list">0000001-141024163151211-oozie-oozi-W</source>
      </sources>
      <parameters/>					
    </node>
    <node id="node_pixex">
      <job id="PixEx"></job>
      <sources>
        <source refid="wf:node">node_list</source>
      </sources>
      <parameters/>
    </node> 
  </workflow>
</application>
